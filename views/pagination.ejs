
<nav>
    <div class="container">
        <div class="row">
            <% for (var i = 0; i < heros.length; i++) { %>
                <table class="rounded-xl w-full text-sm text-left mb-2">
                    <tr class="font-semibold grid grid-cols-1 list-inside text-gray-700">
